<section style="padding-top:150px;">
    <div class="container">
        <div class="row">
            <a href="/admin/add-products" class="btn btn-success mb-2 ml-auto">Add Products</a>
        </div>
        <table class="table">
        <thead>
            <tr>
            <th scope="col">No</th>
            <th scope="col">Title</th>
            <th scope="col">Category</th>
            <th scope="col">Description</th>
            <th scope="col">Image</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
            <th scope="row" class="create_index">{{@index}}</th>
            <td>{{this.Name}}</td>
            <td>{{this.Category}}</td>
            <td>{{this.Description}}</td>
            <td><img src="/product-images/{{this._id}}.jpg" alt="" style="width: 50px; height: 50px;"></td>
            </tr>
            {{/each}}

            
        </tbody>
        </table>
    </div>   
</section>
