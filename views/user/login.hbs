<div class="container-fluid p-5 login-background">
    <div class="row justify-content-center align-items-center p-5">
        <div class="login p-5">
        <h1>LOG IN</h1>
            <form action="/login" method="POST">
            {{#if loginErr}}
            <p style="color: red;">{{loginErr}}</p>
            {{/if}}
                <label for="Email"><i class="fa fa-envelope mr-2"></i>Emailid</label><br>
                <input type="email" name="Email" placeholder="Enter emailid"><br>
                <label for="password"><i class="fa fa-lock mr-2"></i>Password</label><br>
                <input type="password" name="Password" placeholder="Enter password"><br>
                <input type="submit" value="Login" ><br>
                <a href="/signup">Create an account?</a>
                <br>
                <a href="/forgotPassword">forgot password?</a>
            </form>
       </div> 
    </div>

</div>